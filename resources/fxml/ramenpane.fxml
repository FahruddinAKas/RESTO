<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="rootPane" alignment="CENTER" minHeight="-Infinity" prefHeight="430.0" prefWidth="800.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.unindra.restoclient.controllers.RamenPaneController">
    <HBox alignment="TOP_CENTER" prefHeight="216.0" prefWidth="600.0" spacing="10.0" VBox.vgrow="ALWAYS">
        <ImageView fx:id="imageView" fitHeight="255.0" fitWidth="255.0" pickOnBounds="true" preserveRatio="true">
         <HBox.margin>
            <Insets top="10.0" />
         </HBox.margin></ImageView>
        <VBox prefHeight="356.0" prefWidth="225.0" spacing="20.0">
            <Label fx:id="namaLabel" text="Nama Makanan">
                <styleClass>
                    <String fx:value="text-body" />
                    <String fx:value="text-white" />
               <String fx:value="text-bold" />
               <String fx:value="nama-ramen" />
                </styleClass>
            </Label>
            <Label fx:id="keteranganLabel" alignment="TOP_LEFT" prefHeight="97.0" prefWidth="189.0" text="keterangan" textAlignment="JUSTIFY">
            <styleClass>
               <String fx:value="text-body" />
               <String fx:value="text-white" />
            </styleClass></Label>
            <Label fx:id="hargaLabel" text="Harga">
                <styleClass>
                    <String fx:value="text-body" />
                    <String fx:value="text-white" />
               <String fx:value="harga-ramen" />
                </styleClass>
            </Label>
        </VBox>
      <padding>
         <Insets top="10.0" />
      </padding>
    </HBox>
    <HBox alignment="BOTTOM_CENTER" prefHeight="37.0" prefWidth="600.0" spacing="20.0">
        <padding>
            <Insets bottom="15.0" left="10.0" />
        </padding>
        <JFXComboBox fx:id="levelCombo" focusColor="WHITE" focusTraversable="false" labelFloat="true" prefHeight="30.0" prefWidth="100.0" promptText="Level" unFocusColor="WHITE" />
        <JFXTextField focusColor="WHITE" focusTraversable="false" labelFloat="true" prefHeight="30.0" prefWidth="100.0" promptText="Jumlah" unFocusColor="WHITE" />
        <JFXButton fx:id="tambahButton" contentDisplay="TOP" focusTraversable="false" mnemonicParsing="false" onAction="#actionhandle" prefHeight="70.0" prefWidth="123.0" styleClass="tambah-pesanan-button" text="Tambah Ke Pesanan">
            <graphic>
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" />
            </graphic>
            <padding>
                <Insets bottom="-5.0" />
            </padding>
        </JFXButton>
    </HBox>
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
</VBox>
